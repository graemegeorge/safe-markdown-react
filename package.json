{
  "name": "safe-markdown-react",
  "version": "0.1.0",
  "description": "Safe, GFM-friendly Markdown \u2192 React renderer with sanitation, link policy, and image allowlists.",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup --dts",
    "dev": "tsx watch src/index.tsx",
    "test": "echo \"(add tests)\"",
    "prepublishOnly": "npm run build",
    "example:dev": "vite --config example/vite.config.ts",
    "example:build": "npm run build && vite build --config example/vite.config.ts",
    "example:preview": "vite preview --config example/vite.config.ts"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "dependencies": {
    "rehype-react": "^8.0.0",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.0.0",
    "unified": "^11.0.4",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.5",
    "tsup": "^8.0.1",
    "tsx": "^4.15.7",
    "typescript": "^5.5.4",
    "vite": "^5.4.0",
    "@vitejs/plugin-react": "^4.3.1",
    "react-dom": "^18.3.1",
    "@types/react-dom": "^18.3.0"
  },
  "keywords": [
    "markdown",
    "react",
    "security",
    "sanitization",
    "gfm",
    "xss",
    "renderer"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://example.com/your/repo.git"
  },
  "bugs": {
    "url": "https://example.com/your/repo/issues"
  },
  "homepage": "https://example.com/your/repo#readme",
  "license": "MIT"
}